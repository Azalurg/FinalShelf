{
  "build": {
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/libraalchemy2/browser" 
  },
  "package": {
    "productName": "libraalchemy2",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "open": true
      },
      "path": { "all": true },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["/**/*"]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "setTitle": true
      }
    },
    "windows": [
      {
        "title": "LibraAlchemy2.0",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.libraalchemy2.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
